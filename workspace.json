{

    "output" : {
        "path": {
            "base": "./workspace",
            "relative": {
                "entities": "/entities.ts",
                "structure": "/structure.json"
            }
        }
    },

    "paths": {
        "dist": "./dist",
        "release": "./release"
    },

    "github": {
        "updateReleaseFolder": {
            "commands": {
                "remove": {
                    "command": "rm",
                    "options": ["-rf", "./release"]
                },
                "copy": { 
                    "command": "cp",
                    "options": ["-rf", "./dist", "./release"]
                }
            }
        },
        "release": { 
            "commands": {
                "generateChanegLog": {
                    "command": "./node_modules/.bin/conventional-changelog",
                    "options": ["-p", "angular", "-i", "CHANGELOG.md", "-s"]
                },
                "add": {
                    "command": "git",
                    "options": ["add", "./release", "package.json"]
                },
                "commit": { 
                    "command": "git",
                    "options": ["commit", "-m", "chore(release): {{version}}", "-m", "[skip ci]"]
                },
                "push": {
                    "command": "git",
                    "options": ["push", "--follow-tags", "-f", "-u", "origin", "master"]
                },
                "tag": { 
                    "command": "git",
                    "options": ["tag", "-a", "{{version}}", "-m", "{{version}}"]
                },
                "generateRelease": {
                    "command": "./node_modules/.bin/conventional-github-release",
                    "options": ["-p", "angular", "-t", "{{token}}"]
                }
            }
        },
        "push": {
            "commands": {
                "add": {
                    "command": "git",
                    "options": ["add", "."]
                },
                "commit": { 
                    "command": "git",
                    "options": ["commit", "-m", "chore(bump): Bumped to start working on version -> {{version}}", "-m", "[skip ci]"]
                },
                "push": {
                    "command": "git",
                    "options": ["push", "--follow-tags", "-f", "-u", "origin", "master"]
                }
            }
        },
        "config": {
            "commands": {
                "push": {
                    "command": "git",
                    "options": ["config", "--global", "push.default", "simple"]
                },
                "name": { 
                    "command": "git",
                    "options": ["config", "--global", "user.name", "efcloud-build-bot"]
                },
                "email": { 
                    "command": "git",
                    "options": ["config", "--global", "user.email", "efcloud-build-bot@ef.com"]
                }
            }
        }
    },
    
    "projects": {

        "applications": {
            "common": {

                "path": {
                    "relative": {
                        "index":"/src/app/main.ts",
                        "tsconfig": "/tsconfig.app.json"
                    }
                },
                "commands": {
                    "test": {
                        "command": "ng",
                        "options": [ "test", "{{id}}", "--watch", "false" ]
                    },
                    "build": {
                        "command": "ng",
                        "options": [ "build", "{{id}}", "--watch", "false" ]
                    },
                    "lint": {
                        "command": "ng",
                        "options": [ "lint", "{{id}}", "--watch", "false" ]
                    },
                    "serve": {
                        "command": "ng",
                        "options": [ "serve", "{{id}}", "--watch", "false" ]
                    }
                }
            }
        },

        "libraries": {
            "common": {
                "path": {
                    "relative": {
                        "index":"/src/index.ts",
                        "tsconfig": "/tsconfig.lib.json"
                    }
                },
                "commands": {
                    "test": {
                        "command": "ng",
                        "options": [ "test", "{{id}}", "--watch", "false" ]
                    },
                    "build": {
                        "command": "ng",
                        "options": [ "build", "{{id}}", "--watch", "false" ]
                    },
                    "lint": {
                        "command": "ng",
                        "options": [ "lint", "{{id}}", "--watch", "false" ]
                    }
                },
                "util": {
                    "commands": {
                        "test": {
                            "command": "ng",
                            "options": [ "test", "{{id}}", "--watch", "false" ]
                        }

                    }
                }
            }
        },

        "command-line-tools": {
            "common": {
                "path": {
                    "relative": {
                        "index":"/src/index.ts",
                        "tsconfig": "/tsconfig.json"
                    }
                },
                "commands": {
                    "test": {
                        "command": "mocha",
                        "options": [ "-r", "ts-node/register", "--inspect", "\"{{path.base}}/**/*.spec.ts\"", "--watch", "--watch-extensions", "ts" ]
                    },
                    "build": {
                        "command": "tsc",
                        "options": [ "-p", "{{tsconfigPath}}", "--strictNullChecks", "false" ]
                    },
                    "lint": {
                        "command": "ng",
                        "options": [ "lint", "{{id}}", "--watch", "false" ]
                    }
                }
            }
        }
    }
}

